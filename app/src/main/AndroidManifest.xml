<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.ecommerce">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ecommerce"
        tools:replace="android:theme">
        <activity
            android:name=".Buyers.HomeActivity"
            android:exported="true" />
        <activity
            android:name=".Sellers.SellerMaintainProductsActivity"
            android:exported="true" />
        <activity
            android:name=".Admin.AdminApproveProductActivity"
            android:exported="true" />
        <activity
            android:name=".Admin.AdminHomeActivity"
            android:exported="true" />
        <activity
            android:name=".Sellers.SellerHomeActivity"
            android:exported="true"
            android:label="@string/title_activity_seller_home" />
        <activity
            android:name=".Sellers.SellerLoginActivity"
            android:exported="true" />
        <activity
            android:name=".Sellers.SellerRegistrationActivity"
            android:exported="true" />
        <activity
            android:name=".Buyers.BuyerResetPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".Admin.AdminDisapproveProductsActivity"
            android:exported="true" />
        <activity
            android:name=".Buyers.BuyerSearchProductActivity"
            android:exported="true" />
        <activity
            android:name=".Admin.AdminUserProductActivity"
            android:exported="true" />
        <activity
            android:name=".Admin.AdminNewOrdersActivity"
            android:exported="true" />
        <activity
            android:name=".Buyers.BuyerConfirmFinalOrderActivity"
            android:exported="true" />
        <activity
            android:name=".Buyers.BuyerCartActivity"
            android:exported="true" />
        <activity
            android:name=".Buyers.BuyerProductsDetailsActivity"
            android:exported="true" />
        <activity
            android:name=".Buyers.BuyerSettingActivity"
            android:exported="true" />
        <activity
            android:name=".Buyers.BuyerHomeActivity"
            android:exported="true"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.Ecommerce.NoActionBar" />
        <activity
            android:name=".Sellers.SellerAddNewProductActivity"
            android:exported="true" />
        <activity
            android:name=".Sellers.SellerProductCategoryActivity"
            android:exported="true" />
        <activity android:name=".Buyers.BuyerRegisterActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>