<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyers.BuyerResetPasswordActivity">

    <RelativeLayout
        android:id="@+id/rl123"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        >

        <TextView
            android:id="@+id/total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>

    <EditText
        android:id="@+id/find_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please write your phone number"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_below="@+id/rl123"
        android:layout_margin="15dp"
        />

    <TextView
        android:id="@+id/answer_the_following"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer The Following Security Question"
        android:gravity="center"
        android:textSize="26sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/find_phone_number"
        />

    <EditText
        android:id="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please write your phone number"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_below="@+id/answer_the_following"
        android:layout_margin="15dp"
        />

    <EditText
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please write your phone number"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_below="@+id/question_1"
        android:layout_margin="15dp"
        />

</RelativeLayout>